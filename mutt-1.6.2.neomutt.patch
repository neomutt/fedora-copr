+/**
+ * rstrip_in_place - Strip a trailing carriage return
+ * @s:  String to be modified
+ *
+ * The string has its last carriage return set to NUL.
+ * Returns:
+ *	The modified string
+ */
+static char *
+rstrip_in_place (char *s)
+{
+	if (!s)
+		return NULL;
+
+	char *p;
+
+	p = &s[strlen (s)];
+	if (p == s)
+		return s;
+	p--;
+	while ((p >= s) && ((*p == '\n') || (*p == '\r')))
+		*p-- = '\0';
+	return s;
+}
