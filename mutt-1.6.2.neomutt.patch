+ * If the file exists, we can use the 'append-hook' command.
+ * Otherwise, use the 'close-hook' command.
+ *
+ * Returns:
+ *	string: Append command or Close command
+ *	NULL:   On error
+ */
+static const char *
+get_append_command (const CONTEXT *ctx, const char *path)
+{
+	if (!path || !ctx)
+		return NULL;
