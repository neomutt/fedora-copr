+					pmatch[color_line->match].rm_eo += offset;
+					if (!found ||
+						(pmatch[color_line->match].rm_so < (lineInfo.syntax)[i].first) ||
+						((pmatch[color_line->match].rm_so == (lineInfo.syntax)[i].first) &&
+						(pmatch[color_line->match].rm_eo > (lineInfo.syntax)[i].last))) {
